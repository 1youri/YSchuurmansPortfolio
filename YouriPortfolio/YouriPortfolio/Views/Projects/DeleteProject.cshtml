@model YouriPortfolio.Models.ViewModels.ProjectViewModel
@{
    ViewBag.Title = "Delete";
}
<br/>
<div class="row">
    <div class="col-md-4 col-md-offset-4 ContentBlock text-center">
        <h2>Delete</h2>
        @using (Html.BeginForm("DeleteProject", "Projects", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Project.ID)
            <p class="row">
                Are you sure you want to delete this page?<br />
                Type the name of the project to delete it.
            </p>
            <div class="row">
                @Html.EditorFor(model => model.DeleteConfirmationName)
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
            if (!String.IsNullOrEmpty(ViewBag.Error))
            {
                <p>@ViewBag.Error</p>
            }

            <br />

        }
    </div>
</div>
